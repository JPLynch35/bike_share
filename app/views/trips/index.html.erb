<section class='hero is-info'>
  <div class='hero-body'>
    <div class='container'>
      <h1 class='title'>
        All Trips
      </h1>
      <h2 class='sub-title'>
        <% if current_admin? %>
        <p class="control"><%= button_to 'Create New Trip', new_admin_trip_path, method: :get, class: "button is-small is-warning"%></p>
        <% end %>
      </h2>
    </div>
  </div>
</section>
<section class="section">
  <div class="columns is-centered">
    <div class="column is-narrow">
      <table class="table is-hoverable is-centered">
        <thead>
          <tr class="is-selected is-primary">
            <th>Trip #</th>
            <th>Duration</th>
            <th>Start Date</th>
            <th>Start Station</th>
            <th>End Date</th>
            <th>End Station</th>
            <th>Bike ID</th>
            <th>Subscription Type</th>
            <th>Zip Code</th>
            <% if current_admin? %>
              <th>Admin Edit</th>
              <th>Admin Delete</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @trips.each_with_index do |trip, index| %>
            <tr>
              <td><%= link_to index + 1, trip_path(trip) %></td>
              <td><%= trip.duration %></td>
              <td><%= trip.start_date.to_time.strftime('%m/%d/%y at %l:%M %p') %></td>
              <td><%= trip.start_station_name.truncate(20) %></td>
              <td><%= trip.end_date.to_time.strftime('%m/%d/%y at %l:%M %p') %></td>
              <td><%= trip.end_station_name.truncate(20) %></td>
              <td><%= trip.bike_id %></td>
              <td><%= trip.subscription_type %></td>
              <td><%= trip.zip_code %></td>
              <% if current_admin? %>
                <div class="trip_<%= trip.id %>">
                  <td class='control'><%= button_to 'Edit', edit_admin_trip_path(trip), method: :get, class: "button is-primary is-outlined is-small" %></td>
                  <td class='control'><%= button_to 'Delete', admin_trip_path(trip), method: :delete, class: "button is-danger is-outlined is-small", data: {confirm: 'Are you sure you want to delete this trip?'} %></td>
                </div>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<%= paginate @trips %>
