  <section class="hero is-info">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Trip Info
        </h1>
      </div>
    </div>
  </section>
<div class="tile is-ancestor is-centered">
  <div class="tile is-vertical is-8">
    <div class="tile">
      <div class="tile is-parent is-vertical">
        <article class="tile is-child notification is-white">
          <p class="sub-title">
            &nbsp &nbsp &nbsp &nbsp Duration: <%= @trip.duration %></p>
            &nbsp &nbsp &nbsp &nbsp Start Date: <%= @trip.start_date.to_date %></p>
            &nbsp &nbsp &nbsp &nbsp Start Station: <%= @trip.start_station_name %></p>
            &nbsp &nbsp &nbsp &nbsp Start Station ID: <%= @trip.start_station_id %></p>
            &nbsp &nbsp &nbsp &nbsp End Date: <%= @trip.end_date.to_date %></p>
            &nbsp &nbsp &nbsp &nbsp End Station: <%= @trip.end_station_name %></p>
            &nbsp &nbsp &nbsp &nbsp Bike ID: <%= @trip.bike_id %></p>
            &nbsp &nbsp &nbsp &nbsp Subscription Type: <%= @trip.subscription_type %></p>
            &nbsp &nbsp &nbsp &nbsp Zip Code: <%= @trip.zip_code %></p>
        </article>
      </div>
    </div>
  </div>
</div>
<div class="tile is-ancestor">
  <div class="tile is-vertical is-8">
    <div class="tile">
      <div class="tile is-parent is-vertical">
        <div class="container is-fluid">
        <div class='field is-grouped'>
          <% if current_admin? %>
          <a class="control"><%= button_to 'Edit', edit_admin_trip_path(@trip), method: 'get', class: "button is-outlined is-medium is-primary" %></a>
          <a class="control"><%= button_to 'Delete', admin_trip_path(@trip), method: "delete",  class: "button is-outlined is-medium is-danger", data: {confirm: 'Are you sure you want to delete this station?'} %></a>
          <% end %>
          <a class="control"><%= button_to 'Back', trips_path, method: :get, class: "button is-outlined is-medium is-link"%>
        </div>
      </div>
    </div>
  </div>
</div>
