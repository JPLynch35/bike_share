<%= form_for @user do |f| %>

  <p><%= f.label :first_name %></p>
  <p><%= f.text_field :first_name  %></p>

  <p><%= f.label :last_name  %></p>
  <p><%= f.text_field :last_name %></p>

  <p><%= f.label :street %></p>
  <p><%= f.text_field :street %></p>

  <p><%= f.label :city   %></p>
  <p><%= f.text_field :city %></p>

  <p><%= f.label :state  %></p>
  <p><%= f.text_field :state %></p>

  <p><%= f.label :zip_code %></p>
  <p><%= f.text_field :zip_code  %></p>

  <p><%= f.label :email  %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password  %></p>

  <p><%= f.submit %></p>
<% end %>
