<%= form_for @user do |f| %>

  <%= label :first_name%>
  <%= text_field :first_name%>

  <%= label :last_name%>
  <%= text_field :last_name%>

  <%= label :street%>
  <%= text_field :street%>

  <%= label :city%>
  <%= text_field :city%>

  <%= label :state%>
  <%= text_field :state%>

  <%= label :zip_code%>
  <%= text_field :zip_code%>

  <%= label :email%>
  <%= text_field :email%>

  <%= label :password%>
  <%= password_field :password%>

<%= f.submit %>
<% end %>
