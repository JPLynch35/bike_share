<section class="hero is-fullheight has-bg-img">
  <div class="hero-body">
    <div class="container">
      <div id='existing-user-login'>
        <%= form_tag login_path do %>

          <p><%= label_tag :email%></p>
          <p><%= text_field_tag :email%></p>

          <p><%= label_tag :password%></p>
          <p><%= password_field_tag :password%></p>

          <p><%= submit_tag 'Login' %></p>
        <% end %>
      <p><%= link_to 'Create Account', new_user_path %> </p>
      </div>
    </div>
  </div>
</section>
