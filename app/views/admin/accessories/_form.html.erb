<%= form_for [:admin, @accessory] do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :status %>
<%= f.select :status, ['retired', 'active'] %>

<%= f.label :image_url %>
<%= f.text_field :image_url %>

<%= f.submit %>
<% end %>
