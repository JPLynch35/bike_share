<h1>Bike Shop</h1>

<ul>
  <% @accessories.each do |accessory| %>
    <div id="accessory_<%= accessory.id %>">
      <li>Image tag placeholder</li>
      <li><%= accessory.title %></li>
      <% if accessory.active? %>
        <li><%= link_to 'Add to Cart (placeholder link path)', accessories_path %></li>
      <% else %>
        <li>Accessory Retired</li>
      <% end %>
    </div>
  <% end %>
</ul>

<%= paginate @accessories %>
